<!DOCTYPE html>
<html>
<head>
  <title>Auth</title>
<%= stylesheet_link_tag "application", media:  "all" %>
<%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
  
</head>
<body>
  
  <div class="navbar navbar-inverse">
    <div class="navbar-inner">   
      <ul class="nav">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'About Us', about_us_path %></li>
        <li><%= link_to 'Contact Us', contact_us_path %></li>
        <li><%= link_to 'Sign Up', sign_up_path %></li>
        <% if current_user %> 
          <li><%= link_to 'Change Password', change_password_user_path(current_user.id) %></a></li>
          <li><%= link_to 'Sign Out', log_out_path %></a></li>
          <% else %>
          <li><%= link_to 'Login', log_in_path %></li>
        <% end %>
      </ul>
    </div> 
 </div> 
  
  
 <div id="flash">
    <% unless flash[:alert].blank? %>
    <div class="alert">
        <button class="close" "data-dismiss" = "alert">
            &times;
        </button>
        <%= flash[:alert] %>
    </div>
    <% end %>

    <% if content_for?(:message) %>
    <div class="alert" style ="margin:20px 0;">
        <%= yield(:message) %>
    </div>
    <%end %>

    <% unless flash[:notice].blank? %>
    <div class="alert alert-info" style = "<%= 'border-top:0;text-align: center;' if flash[:alert] || yield(:message) %>">
        <button class="close" "data-dismiss" = "alert">
            &times;
        </button>
        <%= flash[:notice] %>
    </div>
    <% end %>
</div>


<%= yield %>

</body>
</html>
